
@{
    ViewBag.Title = "Customer";
}
<link href="~/Scripts/aappCutomer.css" rel="stylesheet" />
@*<link href="~/Content/theme.css" rel="stylesheet" />*@

<div class="container" ng-app="cobraApp">
    <div ng-controller="customerCtrl" ng-init="GetAllData()">
        <hr />
        <div class="modal fade modal-dialog" role="dialog">
            <script type="text/ng-template" id="aeCustomer.html">
                <div class="modal-content">
                    <div class="modal-header">
                        <h3 class="modal-title">{{headerTitle}}</h3>
                    </div>
                    <div class="modal-body">
                        <form class="form-horizontal" name="addCustomerForm" role="form">
                            <div class="form-group">
                                <label class="control-label col-sm-2" for="txtName">Name</label>
                                <div class="col-sm-10">
                                    <input ng-model="customer.Name" class="form-control" type="text" placeholder="Name" title=" Name" /> {{ customer.Name }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-2" for="txtAdd1">Address1</label>
                                <div class="col-sm-10">
                                    <input ng-model="customer.Address1" class="form-control" type="text" placeholder="Address1" title=" Address1" /> {{ customer.Address1 }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-2" for="txtAdd2">Address2</label>
                                <div class="col-sm-10">
                                    <input ng-model="customer.Address2" class="form-control" type="text" placeholder="Address2" title=" Address2" /> {{ customer.Address2 }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-2" for="txtTC">City</label>
                                <div class="col-sm-10">
                                    <input ng-model="customer.City" class="form-control" type="text" placeholder="Town / City" title=" City" /> {{ customer.City }}
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-offset-2 col-sm-10">
                                    <button class="btn btn-primary" ng-click="save()">Submit</button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-warning btn-lg pull-right" ng-click="cancel()">Cancel</button>
                    </div>
                </div>
            </script>
        </div>
        
        <div>
            <button class="btn btn-success btn-lg pull-right" ng-click="AddCustomer()">Add</button>
        </div>
        <h2>Customer List</h2>
        <span class="clearfix"></span>
        <hr />
        
        <div >
            <table class="table table-striped">
                <thead>
                    <tr>
                        @*<th>  Id  </th>*@
                        <th>  Name  </th>
                        <th>  Address1  </th>
                        <th>  Address2  </th>
                        <th>  City  </th>
                        <th>  Action  </th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="cus in customer">
                        @*<td>{{cus.Id}}</td>*@
                        <td>{{cus.Name}}</td>
                        <td>{{cus.Address1}}</td>
                        <td>{{cus.Address2}}</td>
                        <td>{{cus.City}}</td>
                        <td>
                            <button class="btn btn-primary" ng-click="EditCustomer(cus)" ng-hide="cus == null">Edit</button>
                            <button class="btn btn-danger" ng-click="DeleteCustomer(cus)">Delete</button>
                        </td>

                    </tr>
                </tbody>
            </table>
            
        </div>
    </div>
</div>


